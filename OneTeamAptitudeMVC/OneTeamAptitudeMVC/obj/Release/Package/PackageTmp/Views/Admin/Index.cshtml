    <script>
        $('#DeptDropdown').change(function () {

            alert("Working");

            $.ajax({
                        type: "POST",
                        // url: "/Student/GetDivisionByClassId",
                        url: '@Url.Action("GetUserBasedDepartment", "Admin")',
