@model OneTeamAptitudeMVC.Models.LevelAssign
@{
    /**/

    ViewBag.Title = "NewLevelAssign";
}



@using (Html.BeginForm("NewLevelAssign", "Admin", FormMethod.Post))
{
    <div class="sidebar" data-color="green">
        <div class="logo">
            <h1>Aptitude Portal</h1>
        </div>
        <div class="sidebar-wrapper">
            <ul class="nav">
                <li>
                    <a href="~/Admin/ExamResult">
                        <i class="fa fa-university"></i>
                        <p>Exam Result</p>
                    </a>
                </li>
                <li>
                    <a href="~/Admin/Question">
                        <i class="now-ui-icons education_atom"></i>
                        <p>Apptitude Questions</p>
                    </a>
                </li>


                <li>
                    <a href="~/Admin/Index">
                        <i class="now-ui-icons users_single-02"></i>
                        <p>User </p>
                    </a>
                </li>
                @*<li>
                        <a href="=">
                            <i class="now-ui-icons ui-1_bell-53"></i>
                            <p>Notifications</p>
                        </a>
                    </li>*@
                <li class="active">
                    <a href="~/Admin/LevelAssign">
                        <i class="fa fa-gear fa-spin"></i>
                        <p>Level Assign</p>
                    </a>
                </li>
                @*<li>
                        <a href="./typography.html">
                            <i class="now-ui-icons text_caps-small"></i>
                            <p>Typography</p>
                        </a>
                    </li>*@
                <li>
                    <a href="~/Account/ChangePassword">
                        <i class="fa fa-user-secret"></i>
                        <p>Change Password</p>
                    </a>
                </li>
                <li>
                    <a href="~/Account/LogOut">
                        <i class="fa fa-sign-out-alt"></i>
                        <p>Logout</p>
                    </a>
                </li>

            </ul>
        </div>
    </div>
    <div class="main-panel" style="background-color:white;">
        <nav class="navbar navbar-expand-lg fixed-top navbar-transparent  bg-primary  navbar-absolute">

            <div class="container-fluid">
                <div class="navbar-wrapper">
                    <div class="navbar-toggle">
                        <button type="button" class="navbar-toggler">
                            <span class="navbar-toggler-bar bar1"></span>
                            <span class="navbar-toggler-bar bar2"></span>
                            <span class="navbar-toggler-bar bar3"></span>
                        </button>
                    </div>
                    <a class="navbar-brand" href="#pablo">Dashboard</a>
                </div>
            </div>
        </nav>
        <div class="content" style="margin-top:5px;">

            <div class="row">
                <div class="col-md-8">

                    <img src="../Images/OnetEAMSOLUTIONS.png" class="img-responsive" alt="One Team Aptitude Portal" />

                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">Add New Level</div>
                        <div class="card-body">
                            <div>
                                @Html.Label("Level :")
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-level-up"></i>
                                    </div>

                                    @Html.DropDownListFor(Model => Model.Level.Id, new SelectList(ViewBag.LevelList, "id", "Name"), "select", new { @class = "form-control input-lg " })



                                </div>
                                @Html.ValidationMessageFor(p => p.Level.Id, "", new { @class = "text-danger" })

                            </div>

                            <div>

                                @Html.Label("Category :")
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-university"></i>
                                    </div>
                                    @Html.DropDownListFor(Model => Model.Category.Id, new SelectList(ViewBag.QuestionCategory, "id", "Name"), "select", new { @class = "form-control input-lg" })
                                </div>
                                @Html.ValidationMessageFor(p => p.Category.Id, "", new { @class = "text-danger" })

                            </div>
                            <div>

                                @Html.Label("Pass Mark :")
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-shield"></i>
                                    </div>
                                    @Html.TextBoxFor(Model => Model.Passmark, new { @class = "form-control", @placeholder = "Enter here" })
                                </div>
                                @Html.ValidationMessageFor(p => Model.Passmark, "", new { @class = "text-danger" })

                            </div>
                            <div>

                                @Html.Label("No Of Questions :")
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-trophy"></i>
                                    </div>
                                    @Html.TextBoxFor(Model => Model.Totalmark, new { @class = "form-control", @placeholder = "Enter here" })
                                </div>
                                @Html.ValidationMessageFor(p => Model.Totalmark, "", new { @class = "text-danger" })

                            </div>
                            <div>

                                @Html.Label("Time Of Exam In Minutes :")
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-clock-o"></i>
                                    </div>
                                    @Html.TextBoxFor(Model => Model.TimeForExam, new { @class = "form-control", @placeholder = "Enter here" })
                                </div>
                                @Html.ValidationMessageFor(p => Model.TimeForExam, "", new { @class = "text-danger" })

                            </div>
                            <div>

                                @Html.Label("Exam Instruction :")
                                @Html.TextAreaFor(Model => Model.Instruction, new { @class = "form-control" })
                                @Html.ValidationMessageFor(p => Model.Instruction, "", new { @class = "text-danger" })

                            </div>


                            <div style="padding-top:5px;">
                                <input id="Submit1" type="submit" value="Save" class="btn btn-success" />
                                @Html.ActionLink("Cancel", "LevelAssign", "Admin", null, new { @class = "btn btn-danger" })

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


}
