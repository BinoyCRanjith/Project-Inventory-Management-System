@model List<OneTeamAptitudeMVC.Models.ExamResult>
@{
    ViewBag.Title = "StudentExamHistory";
}

<div class="sidebar" data-color="green">
    <div class="logo">
        <h1>Aptitude Portal</h1>
    </div>
    <div class="sidebar-wrapper">
        <ul class="nav">
            <li>
                <a href="~/User/Index">
                    <i class="fa fa-university"></i>
                    <p>Home</p>
                </a>
            </li>

            @*<li>
            <a href="./typography.html">
                <i class="now-ui-icons text_caps-small"></i>
                <p>Typography</p>
            </a>
        </li>*@
            <li>
                <a href="~/User/ExamPractice">
                    <i class="fa fa-book"></i>
                    <p>Exam Practice</p>
                </a>
            </li>
            <li>
                <a href="~/Account/ChangePassword">
                    <i class="fa fa-user-secret"></i>
                    <p>Change Password</p>
                </a>
            </li>
            <li>
                <a href="~/Account/LogOut">
                    <i class="fa fa-sign-out-alt"></i>
                    <p>Logout</p>
                </a>
            </li>

        </ul>
    </div>
</div>
<div class="main-panel" style="background-color:white;">
    <nav class="navbar navbar-expand-lg fixed-top navbar-transparent  bg-primary  navbar-absolute">

        <div class="container-fluid">
            <div class="navbar-wrapper">
                <div class="navbar-toggle">
                    <button type="button" class="navbar-toggler">
                        <span class="navbar-toggler-bar bar1"></span>
                        <span class="navbar-toggler-bar bar2"></span>
                        <span class="navbar-toggler-bar bar3"></span>
                    </button>
                </div>
                <a class="navbar-brand" href="#pablo">Dashboard</a>
            </div>
        </div>
    </nav>
    <div class="content" style="margin-top:5px;">

        <div class="row">
            <div class="col-md-8">

                <img src="../Images/OnetEAMSOLUTIONS.png" class="img-responsive" alt="One Team Aptitude Portal" />

            </div>
        </div>
        <div class="row">
            <div class="col-md-10">
                <div class="card" style="background-color:darkcyan;border-radius:10px;">


                    <div class="card-body">
                        <div style="background-color:white;">
                            <div class="card-header">
                                <h1>Exam History</h1>
                            </div>
                            <div class="card-body">
                                <table id="editabledatatable" class="table table-striped table-hover table-bordered dt-responsive display">

                                    <thead>
                                        <tr>

                                            <th>
                                                Category
                                            </th>
                                            <th>
                                                Date
                                            <th>
                                                Mark Scored
                                            </th>
                                            <th>
                                                Total Mark
                                            </th>
                                        </tr>
                                    </thead>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @item.Category
                                            </td>
                                            <td>
                                                @item.DateOfExam
                                            </td>
                                            <td>
                                                @item.Markscored
                                            </td>
                                            <td>
                                                @item.Total
                                            </td>


                                        </tr>

                                    }




                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts
{
    @Styles.Render("~/css/datatable");
    @Scripts.Render("~/bundles/datatable");

    <script type="text/javascript">
        var colsList = [
            null
            , null
            , { className: 'col-sm-2 col-md-1 col-lg-1', orderable: false, searchable: false }
            , { className: 'col-sm-2 col-md-1 col-lg-1', orderable: false, searchable: false }

        ]

        var exportcolnumber = [0, 1, 2, 3, 4, 5, 6];

        InitiateSimpleDataTable.init('#editabledatatable', colsList, exportcolnumber);

        $('#editabledatatable').find('img').error(function () {
            $(this).attr('src', '/assets/img/image-not-found.png');
        }

        );

    </script>
}