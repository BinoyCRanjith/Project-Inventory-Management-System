@model OneTeamAptitudeMVC.Models.StaffData
@using (Html.BeginForm("Save", "Staff", FormMethod.Post))
{
    @Html.HiddenFor(p => p.Id)
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h1>Staff Registration</h1>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.Label("Name :")
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-user"></i>
                                    </div>
                                    @Html.TextBoxFor(Model => Model.Fullname, new { @class = "form-control", @placeholder = "Type  Name here" })

                                </div>
                                @Html.ValidationMessageFor(p => p.Fullname, "", new { @class = "text-danger", @required = "", })
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.Label("Email :")
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-envelope"></i>
                                    </div>
                                    @Html.TextBoxFor(Model => Model.Email, new { @class = "form-control", @placeholder = "Type Email here" })
                                </div>
                                @Html.ValidationMessageFor(p1 => p1.Email, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.Label("Phonenumber :")
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-phone-square"></i>
                                    </div>
                                    @Html.TextBoxFor(Model => Model.Phonenumber, new { @class = "form-control", @placeholder = "Type Phone Number here" })
                                </div> @Html.ValidationMessageFor(p => p.Phonenumber, "", new { @class = "text-danger" })
                            </div>
                        </div>





                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.Label("Address :")
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-vcard"></i>
                                    </div>
                                    @Html.TextBoxFor(Model => Model.Address, new { @class = "form-control", @placeholder = "Address" })
                                </div>@Html.ValidationMessageFor(p => p.Address, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.Label("Password :")
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-envelope"></i>
                                    </div>
                                    @Html.TextBoxFor(Model => Model.Password, new { @class = "form-control", @placeholder = "Type Password here", @type = "Password" })
                                </div>
                                @Html.ValidationMessageFor(p1 => p1.Password, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                @Html.Label("Status :")
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-vcard"></i>
                                    </div>
                                    @*Html.TextBoxFor(Model => Model.Type, new { @class = "form-control", @placeholder = "Address" })*@

                                    @Html.DropDownListFor(p => p.Type, new SelectList(ViewBag.TypeList, "Id", "Type"), new { @class = "form-control input-lg" })
                                </div>@Html.ValidationMessageFor(p => p.Type, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="col-md-12">
                            <div class="form-group">
                                <input type="submit" value="submit" class="btn btn-success" style="padding-top:5px;" />

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}

