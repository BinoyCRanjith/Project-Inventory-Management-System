@section scripts
{
    <script>

        function Check() {
            var pass1 = $("#TextPassword").val();

            var pass2 = $("#TextPassword1").val();
            if (pass1 == pass2) {
                $("form").submit();
            }
            else {

                document.getElementById('MessageShowing').innerHTML = "Password Not Match";
            }
        }
    </script>
    }























