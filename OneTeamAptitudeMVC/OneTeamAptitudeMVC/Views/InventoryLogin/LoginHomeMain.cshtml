@model OneTeamAptitudeMVC.Models.StaffData

@using (Html.BeginForm("LoginHome", "InventoryLogin", FormMethod.Post))

{
    <head>
        <title>Bootstrap Example</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>


    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="https://mdbootstrap.com/img/Photos/new-templates/bootstrap-login-form/draw2.png" class="img-fluid"
                     alt="Sample image">
            </div>
            <div class="card-header">
                <h1>LOGIN</h1>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="form-outline mb-4">
                        <div class="form-group">
                            @Html.Label("UserName :")
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-user"></i>
                                </div>
                                @Html.TextBoxFor(Model => Model.Email, new { @class = "form-control", @placeholder = "Type UserName here" })

                            </div>
                            @Html.ValidationMessageFor(p => p.Email, "", new { @class = "text-danger", @required = "", })
                        </div>
                    </div>

                    <div class="form-outline mb-4">
                        <div class="form-group">
                            @Html.Label("Password :")
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fas fa-lock prefix"></i>
                                </div>
                                @Html.TextBoxFor(Model => Model.Password, new { @class = "form-control", @placeholder = "Type Password here", @type = "password" })

                            </div>
                            @Html.ValidationMessageFor(p => p.Password, "", new { @class = "text-danger", @required = "", })
                        </div>
                    </div>
                    <div class="form-outline mb-4">
                        <label>@TempData["Message"]</label>
                    </div>




                    <div class="form-outline mb-4">

                        <div class="form-group">
                            <input type="submit" value="Login" class="btn btn-success text-center mt-2" style="padding-top:5px;" />
                            <i class="fas fa-sign-in-alt ml-1"></i>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

}
@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            var message = "Message @TempData["Message"]";
            if (message.length > 8) {
                alert(message);
            }
        });
    </script>
}