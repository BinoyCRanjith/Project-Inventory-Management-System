@model List<OneTeamAptitudeMVC.Models.PurchaseData>
<style>
    body {
        margin: 0;
        font-family: Arial, Helvetica, sans-serif;
    }

    .topnav {
        overflow: hidden;
        background-color: #333;
    }

        .topnav a {
            float: left;
            color: #f2f2f2;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
            font-size: 17px;
        }

            .topnav a:hover {
                background-color: #ddd;
                color: black;
            }

            .topnav a.active {
                background-color: #04AA6D;
                color: white;
            }
</style>

<body>

    <div class="topnav">
        <a class="active" href="http://localhost:50492/Purchase/PurchaseHomeMain">Home</a>
    </div>


</body>

<div class="row">
    <table Id="editabledatatable" class="table table-striped table-hover table-bordered dt-responsive display" style=" margin-left: 36px !important;">
        <thead>
            <tr>
                <th>ProductName</th>
                <th>PurchaseQTY</th>
                <th>PurchasePrice</th>
                <th>TotalPrice</th>
                <th>SellPrice</th>
                <th>PaymentMethod</th>
                <th>StaffName</th>
                <th>PurchaseDate</th>


                <th>Action</th>

            </tr>
        </thead>


        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @item.ProductName
                    </td>
                    <td>
                        @item.PurchaseQTY
                    </td>
                    <td>
                        @item.PurchasePrice
                    </td>
                    <td>
                        @item.TotalPrice
                    </td>
                    <td>
                        @item.SellPrice
                    </td>
                    <td>
                        @item.PaymentMethod
                    </td>
                    <td>
                        @item.Fullname
                    </td>
                    <td>
                        @item.PurchaseDate
                    </td>

                    <td>
                        <div class="btn-group">
                            <a class="btn btn-azure dropdown-toggle" data-toggle="dropdown">
                                Actions&nbsp;&nbsp; <i class="fa fa-angle-down"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-azure">

                                <li>
                                    @Html.ActionLink("Edit", "InsertPurchase", "Purchase", new { @Id = item.Id }, new { @name = "Edit" })

                                </li>
                                <li>
                                    @Html.ActionLink("Disable", "Delete", "Purchase", new { @Id = item.Id }, new { onclick = "return confirm('Are you sure?');" })

                                </li>
                            </ul>
                        </div>


                    </td>
                </tr>

            }

        }

    </table>
</div>

@section scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script>
        $(document).ready(function () {
            var message = "Message @TempData["Message"]";
            if (message.length > 8) {
                alert(message);
            }
        });
    </script>
}

